@using System.Security.Claims;
@using Repository.Interfaces
@inject IReportRepository ReportRepo

<div class="card-single">
    <div class="card-flex">
        <div class="card-info">
            <div class="card-head">
                <span>Total Employees</span>
                <small>The Number of Reports:</small>
            </div>
            <h2>@ReportRepo.GetTotalRecordsNumber() Report</h2>
        </div>
        <div class="card-chart success">
            <span class="las la-chart-line"></span>
        </div>
    </div>
</div>

<div class="card-single">
    <div class="card-flex">
        <div class="card-info">
            <div class="card-head">
                <span>Total Own Reports</span>
                <small>Number Reports Added by Spsecific Admin </small>
            </div>
            <h2>@ReportRepo.NumberOfOwnReports(User.Claims.FirstOrDefault(e => e.Type == ClaimTypes.NameIdentifier).Value) Report</h2>
        </div>
        <div class="card-chart yellow">
            <span class="las la-chart-line"></span>
        </div>
    </div>
</div>

<div class="card-single">
    <div class="card-flex">
        <div class="card-info">
            <div class="card-head">
                <span>Total Reports Last Month</span>
                <small>Number Reports Create Last Mointh </small>
            </div>

            <h2>@ReportRepo.NumberOfReportsLastMonth() Report</h2>
        </div>
        <div class="card-chart success">
            <span class="las la-chart-line"></span>
        </div>
        @* <div class="card-chart yellow">
        <span class="las la-chart-line"></span>
        </div>
        *@
    </div>
</div>